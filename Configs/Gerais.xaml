<Page x:Class="Configs.Gerais"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Configs"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#FFFDFDFD"
      Title="Gerais">

    <Grid>
        <StackPanel Margin="10">
            <Label>Tempo sincronização cadastro de produtos(minutos)</Label>
            <TextBox Name="tbMinSincProdutos" Width="200" HorizontalAlignment="Left"/>
            <Label>Região tabela de preço Winthor</Label>
            <TextBox Name="regiao_tbl_preco" Width="200" HorizontalAlignment="Left"/>
            <Label>Filial Estoque</Label>
            <TextBox Name="codfilial" Width="200" HorizontalAlignment="Left"/>
            <Label>Modo debug</Label>
            <CheckBox Content="Ativo" Name="modo_debug"/>

        </StackPanel>
        <StackPanel Margin="10" Height="25" VerticalAlignment="Bottom" Orientation="Horizontal">
            <Button Content="Salvar" Width="80" HorizontalAlignment="Left" />
            <Button Content="Cancelar" Width="80" Margin="10,0,0,0" HorizontalAlignment="Left" />

        </StackPanel>
    </Grid>
</Page>
